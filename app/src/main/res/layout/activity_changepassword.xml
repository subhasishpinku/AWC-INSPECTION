<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#26649A"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--<ImageView-->
                <!--android:id="@+id/backId"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/ic_arrow_back_black_24dp"-->
                <!--/>-->
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="#26649A"
                    android:minHeight="?attr/actionBarSize"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:layout_weight="1"
                    android:src="@mipmap/logo" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv1"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/dasboard_shape">

            <TextView
                android:layout_marginBottom="5sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorwhite"
                android:drawableLeft="@drawable/lock"
                android:textSize="20sp"
                android:text="Change Password"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv2"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_below="@+id/lv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="@drawable/edit_text_shape"
                android:gravity="center"
                android:padding="6sp"
                android:src="@drawable/ic_userprofile" />

            <EditText
                android:id="@+id/userId"
                android:layout_marginLeft="10sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:paddingLeft="5sp"
                android:hint="User Id"
                android:background="@drawable/edit_text_shape" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv3"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_below="@+id/lv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="@drawable/edit_text_shape"
                android:gravity="center"
                android:padding="6sp"
                android:src="@drawable/lock" />

            <EditText
                android:id="@+id/oldpass"
                android:layout_marginLeft="10sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:paddingLeft="5sp"
                android:hint="Old Pasword"
                android:background="@drawable/edit_text_shape" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv4"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_below="@+id/lv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="@drawable/edit_text_shape"
                android:gravity="center"
                android:padding="6sp"
                android:inputType="number"
                android:hint="Show Email"
                android:src="@drawable/ic_vpn_key_black_24dp" />

            <EditText
                android:id="@+id/newpass"
                android:layout_marginLeft="10sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:paddingLeft="5sp"
                android:hint="New password"
                android:background="@drawable/edit_text_shape"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv5"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_below="@+id/lv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="@drawable/edit_text_shape"
                android:gravity="center"
                android:padding="6sp"
                android:inputType="number"
                android:hint="Show Email"
                android:src="@drawable/ic_vpn_key_black_24dp" />

            <EditText
                android:id="@+id/confirmpass"
                android:layout_marginLeft="10sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:paddingLeft="5sp"
                android:hint="Confirm Password"
                android:background="@drawable/edit_text_shape"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv9"
            android:layout_below="@+id/lv8"
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <Button
                android:id="@+id/submitID"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:background="@drawable/border_green"
                android:text="SUBMIT"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvId"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="MANITAINED BY"
                android:textColor="#26649A"
                android:textSize="10sp"
                android:textStyle="italic"
                />
            <TextView
                android:layout_below="@+id/tvId"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#26649A"
                android:textStyle="italic"
                android:text="DILIGENT ITECH PRIVATE LIMITED"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>