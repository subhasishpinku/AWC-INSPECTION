<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#26649A"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <!--<ImageView-->
               <!--android:id="@+id/backId"-->
               <!--android:layout_width="wrap_content"-->
               <!--android:layout_height="wrap_content"-->
               <!--android:background="@drawable/ic_arrow_back_black_24dp"-->
               <!--/>-->
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="#26649A"
                android:minHeight="?attr/actionBarSize"
                app:theme="@style/ThemeOverlay.AppCompat.Dark"
                tools:ignore="RtlCompat" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_weight="1"
                android:src="@mipmap/logo" />
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv1"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dasboard_shape">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorwhite"
            android:drawableLeft="@drawable/ic_profile"
            android:textSize="20sp"
            android:text="My Profile"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lv2"
        android:gravity="center"
        android:layout_marginLeft="5sp"
        android:layout_below="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <!--<ImageView-->
                <!--android:id="@+id/profileId"-->
                <!--android:layout_width="120sp"-->
                <!--android:layout_height="120sp"-->
                <!--android:layout_gravity="center"-->
                <!--android:src="@drawable/user" />-->
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imageView"
                android:layout_width="166dp"
                android:layout_height="120sp"
                android:layout_gravity="center"
                android:src="@drawable/user" />
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="166dp"
                android:layout_height="120sp"
                android:layout_gravity="center"
                android:src="@drawable/user" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/linearLayout1"
            android:orientation="vertical"
            tools:ignore="RtlCompat">

            <Button
                android:id="@+id/ImgUploadId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_file_upload_black_24dp" />

            <Button
                android:id="@+id/ImgRotedId"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_rotate_right_black_24dp" />

            <Button
                android:id="@+id/ImgdeleteId"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_weight="1"
                android:background="@drawable/ic_camera_alt_black_24dp" />

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lv3"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:layout_below="@+id/lv2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView

        android:layout_width="40sp"
        android:layout_height="40sp"
        android:background="@drawable/edit_text_shape"
        android:gravity="center"
        android:padding="6sp"
        android:src="@drawable/ic_userprofile" />

    <TextView
        android:id="@+id/userName"
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="text"
        android:paddingLeft="5sp"
        android:hint="User Name"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:background="@drawable/edit_text_shape" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv4"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_below="@+id/lv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:padding="6sp"
            android:src="@drawable/ic_school_black_24dp" />

        <TextView
            android:id="@+id/userDesig"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5sp"
            android:inputType="text"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:hint="Show Designation"
            android:background="@drawable/edit_text_shape" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv5"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_below="@+id/lv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:padding="6sp"
            android:src="@drawable/ic_userlevel" />

        <TextView
            android:id="@+id/userlavelId"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5sp"
            android:inputType="text"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:hint="Enter User Level"
            android:background="@drawable/edit_text_shape" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv6"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_below="@+id/lv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:padding="6sp"
            android:src="@drawable/ic_pin" />
        <TextView
            android:id="@+id/distId"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5sp"
            android:inputType="text"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:hint="Enter District Name"
            android:background="@drawable/edit_text_shape" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv7"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_below="@+id/lv6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:padding="6sp"
            android:src="@drawable/ic_project" />
        <TextView
            android:id="@+id/projectId"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5sp"
            android:inputType="text"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:hint="Enter Project Name"
            android:background="@drawable/edit_text_shape" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv8"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_below="@+id/lv7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:padding="6sp"
            android:src="@drawable/ic_sector" />
        <TextView
            android:id="@+id/sectorId"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5sp"
            android:inputType="text"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:hint="Enter Sector Name"
            android:background="@drawable/edit_text_shape" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv9"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_below="@+id/lv8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:padding="6sp"
            android:src="@drawable/ic_phone_black_24dp" />

        <EditText
            android:id="@+id/userPhone"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5sp"
            android:inputType="number"
            android:hint="Enter Phone Number"
            android:background="@drawable/edit_text_shape" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv10"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_below="@+id/lv9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:padding="6sp"
            android:src="@drawable/whatsapp" />

        <EditText
            android:id="@+id/userWhatsapp"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5sp"
            android:inputType="number"
            android:hint="Enter Whatsapp Number"
            android:background="@drawable/edit_text_shape"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv11"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_below="@+id/lv10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:padding="6sp"
            android:src="@drawable/ic_email_black_24dp" />

        <EditText
            android:id="@+id/usermail"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textWebEmailAddress"
            android:paddingLeft="5sp"
            android:hint="Enter Email"
            android:background="@drawable/edit_text_shape"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv12"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_below="@+id/lv11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:padding="6sp"
            android:inputType="number"
            android:hint="Show Email"
            android:src="@drawable/ic_vpn_key_black_24dp" />

        <EditText
            android:id="@+id/userPass"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:paddingLeft="5sp"
            android:hint="password"
            android:background="@drawable/edit_text_shape"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv12"
        android:layout_marginTop="40sp">

        <Button
            android:id="@+id/submitID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:background="@drawable/border_green"
            android:text="SUBMIT"
            android:textColor="#FFFFFF" />
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/lv13"
        android:id="@+id/footer"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tvId"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="MAINTAINED BY"
            android:textColor="#26649A"
            android:textSize="10sp"
            android:textStyle="italic"
            />
        <TextView
            android:layout_below="@+id/tvId"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#26649A"
            android:textStyle="italic"
            android:text="DILIGENT ITECH PRIVATE LIMITED"/>
    </RelativeLayout>
</RelativeLayout>

</ScrollView>