<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lv"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/dasboard_shape"
            android:weightSum="1">
            <TextView
                android:id="@+id/bookcornerId"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:gravity="center"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_weight="0.9"
                android:text="Drawing Corner"/>
            <ImageView
                android:id="@+id/closeId"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_close_black_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:textSize="20sp"
                android:text="1. Water Colour â€“ Art n Craft, Brush, non-toxic Crayons"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:textSize="20sp"
                android:text="2. Marble Paper"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:textSize="20sp"
                android:text="3. Paper (Blank)"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:textSize="20sp"
                android:text="4. Draw and Learn"/>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>