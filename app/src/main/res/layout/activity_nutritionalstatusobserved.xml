<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv">
        <LinearLayout
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#26649A"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="#26649A"
                    android:minHeight="?attr/actionBarSize"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark"
                    tools:ignore="RtlCompat" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:layout_weight="1"
                    android:src="@mipmap/logo" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv1"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/square">

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorwhite"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:text="Nutritional Status"/>
        </LinearLayout>
        <TextView
            android:id="@+id/awcstvId"
            android:layout_below="@+id/lv"
            android:layout_marginTop="60sp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="@dimen/inspection_left"
            android:layout_marginRight="@dimen/inspection_right"
            android:gravity="center"
            android:textStyle="bold"
            android:text="YUBA SHAKTI CLUB (19338030102 )"
            android:background="@drawable/edit_text_shape"
            />
        <LinearLayout
            android:id="@+id/lv2"
            android:layout_below="@+id/awcstvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_marginBottom="80sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/inspection_left"
                android:layout_marginRight="@dimen/inspection_right"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/tvId"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:gravity="center"
                    android:textColor="@color/colorwhite"
                    android:background="@drawable/dasboard_shape"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="No of Severely underweight Children" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/lv3"
                        android:layout_marginTop="55sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
<!--                        temoreryoff-->
                        <RadioGroup
                            android:visibility="gone"
                            android:id="@+id/GnsmcID"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rregistrationID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recorded In The Register"
                                android:textColor="@color/colorblack"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/rcfDayID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No Of Children Found On That Day"
                                android:textColor="@color/colorblack"
                                android:textSize="18sp"/>

                        </RadioGroup>
                        <!--                        temoreryoff-->
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lv4"
                        android:layout_below="@+id/lv3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:textColor="#21aad8"
                                android:text="Recorded In The Register"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <EditText
                                android:id="@+id/serveryId"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="36sp"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="3"
                                android:hint="Enter Number"
                                android:paddingLeft="5sp"
                                android:background="@drawable/edit_text_shape" />
                            <ImageButton
                                android:id="@+id/soundserveryId"
                                android:layout_marginTop="5sp"
                                android:layout_marginRight="10sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/lv"
                                android:background="@null"
                                android:src="@drawable/ic_mic_black_24dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:textColor="#21aad8"
                                android:text="No. of Children physically found today"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <EditText
                                android:id="@+id/soundserveryIdd"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="36sp"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="3"
                                android:hint="Enter Number"
                                android:paddingLeft="5sp"
                                android:background="@drawable/edit_text_shape" />
                            <ImageButton
                                android:id="@+id/NsoundchildfoundId"
                                android:layout_marginTop="5sp"
                                android:layout_marginRight="10sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/lv"
                                android:background="@null"
                                android:src="@drawable/ic_mic_black_24dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
<!--                    tempory off-->
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lv5"
                        android:layout_below="@+id/lv4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:gravity="center"
                            android:textColor="@color/colorwhite"
                            android:background="@drawable/dasboard_shape"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="no of SAN Children Using MUAC Tape" />
                        <RadioGroup
                            android:id="@+id/mutapeID"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/mutapeRagistationID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recorded In The Register"
                                android:textColor="@color/colorblack"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/mutapethatdayID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No Of Choldren Found On That Day"
                                android:textColor="@color/colorblack"
                                android:textSize="18sp"/>
                        </RadioGroup>
                    </LinearLayout>
                    <!--                    tempory off-->
                    <LinearLayout
                        android:id="@+id/lvv6"
                        android:layout_below="@+id/lv5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:gravity="center"
                            android:textColor="@color/colorwhite"
                            android:background="@drawable/dasboard_shape"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="Give Comment" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <EditText
                            android:layout_marginLeft="10sp"
                            android:id="@+id/givecmdID"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_shape"
                            android:gravity="top|left"
                            android:inputType="textMultiLine"
                            android:overScrollMode="always"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:lines="4"
                            android:hint="Give Comment"
                            android:paddingStart="10sp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:scrollHorizontally="false"
                            tools:ignore="RtlCompat" />
                            <ImageButton
                                android:id="@+id/givecmdspak"
                                android:layout_marginTop="5sp"
                                android:layout_marginRight="10sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/lv"
                                android:background="@null"
                                android:src="@drawable/ic_mic_black_24dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
<!--            <LinearLayout-->
<!--                android:layout_alignParentBottom="true"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_marginTop="50sp"-->
<!--                android:layout_height="wrap_content">-->
<!--                &lt;!&ndash;<Button&ndash;&gt;-->
<!--                &lt;!&ndash;android:id="@+id/saveID"&ndash;&gt;-->
<!--                &lt;!&ndash;android:layout_width="match_parent"&ndash;&gt;-->
<!--                &lt;!&ndash;android:layout_height="wrap_content"&ndash;&gt;-->
<!--                &lt;!&ndash;android:background="@drawable/border_green"&ndash;&gt;-->
<!--                &lt;!&ndash;android:textColor="@color/colorwhite"&ndash;&gt;-->
<!--                &lt;!&ndash;android:text="Submit"/>&ndash;&gt;-->
