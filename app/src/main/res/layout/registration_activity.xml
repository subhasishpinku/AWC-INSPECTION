<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login"
        android:orientation="horizontal"
        android:background="@mipmap/inspection_bgg">
        <LinearLayout
            android:id="@+id/lv"
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="98sp"
                android:src="@mipmap/logo" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv1"
            android:layout_marginTop="5sp"
            android:layout_below="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#26649A"
                android:text="Directorate of Integrated Child Development Service"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv2"
            android:layout_marginTop="5sp"
            android:layout_below="@+id/lv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#26649A"
                android:text="User Registration"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv3"
            android:layout_below="@+id/lv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/GploadprojectId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/staId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State level"
                    android:textColor="@color/colorblack"
                    android:textSize="18sp" />
                <RadioButton
                    android:id="@+id/disId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District level"
                    android:textColor="@color/colorblack"
                    android:textSize="18sp"/>
                <RadioButton
                    android:id="@+id/projId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project level"
                    android:textColor="@color/colorblack"
                    android:textSize="18sp"/>
                <RadioButton
                    android:id="@+id/secId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorblack"
                    android:text="Sector level"
                    android:textSize="18sp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv5"
            android:layout_below="@+id/lv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10sp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lvolineID"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_shape"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spdisgID"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/image" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv6"
            android:layout_below="@+id/lv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5sp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2sp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_shape"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spdistricID"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/image" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv7"
            android:layout_below="@+id/lv6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5sp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2sp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_shape"
                android:gravity="center"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spprojectId"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/image" />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv8"
            android:layout_below="@+id/lv7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10sp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2sp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_shape"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spsectorID"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/image" />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv4"
            android:layout_below="@+id/lv8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10sp"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/nameId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:hint="Name"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#26649A"
                    android:text="Gender:"/>
                <RadioGroup
                    android:id="@+id/malefemaleId"
                    android:layout_marginLeft="10sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/maleId"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Male"
                        android:textColor="@color/colorblack"
                        android:textSize="18sp" />
                    <RadioButton
                        android:id="@+id/fmaleId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textColor="@color/colorblack"
                        android:textSize="18sp"/>

                </RadioGroup>


            </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#26649A"
                android:text="Date of Birth :"/>
            <RelativeLayout
                android:gravity="center"
                android:background="@drawable/linerridues"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="5sp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:layout_height="35dp">
                <TextView
                    android:id="@+id/FdateId"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textStyle="bold"
                    android:textColor="#21aad8"/>
                <ImageView
                    android:id="@+id/searchID"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="0dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_date_range_black_24dp" />

            </RelativeLayout>
        </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:passwordToggleTint="@color/colorAccent">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/contractId"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="10"
                    android:hint="Official JIO No."
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/userID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:hint="User Name"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorAccent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/userPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="5sp"
                android:layout_below="@+id/lv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="128dp"
                        android:layout_height="120sp"
                        android:layout_gravity="center"
                        android:src="@drawable/user" />

                    <!--                    <com.android.volley.toolbox.NetworkImageView-->
                    <!--                        android:id="@+id/imageView"-->
                    <!--                        android:layout_width="166dp"-->
                    <!--                        android:layout_height="120sp"-->
                    <!--                        android:layout_gravity="center"-->
                    <!--                        android:src="@drawable/user" />-->
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/linearLayout1"
                    android:orientation="vertical"
                    tools:ignore="RtlCompat">

                    <Button
                        android:id="@+id/ImgUploadId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ic_file_upload_black_24dp" />

                    <Button
                        android:id="@+id/ImgRotedId"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ic_rotate_right_black_24dp" />

                    <Button
                        android:id="@+id/ImgdeleteId"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:layout_weight="1"
                        android:background="@drawable/ic_camera_alt_black_24dp" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv9"
            android:layout_below="@+id/lv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15sp"
            android:orientation="vertical"
            android:layout_marginBottom="50sp">
            <Button
                android:id="@+id/subId"
                style="@style/DefaultButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/threed"
                android:text="SUBMIT" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>
