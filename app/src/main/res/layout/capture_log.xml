<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginBottom="10sp"
    android:layout_marginTop="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:background="@drawable/card_view_shape">

        <RelativeLayout
            android:id="@+id/lv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv1"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_marginLeft="10sp"
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:padding="1dp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_marginLeft="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/linearLayout1"
                android:orientation="horizontal"
                tools:ignore="RtlCompat">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/awcscodeId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="50sp"
                        android:justificationMode="inter_word"
                        android:text="(AWC CODE : 12345678912)"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="#26649A"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/viewmapId"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5sp"
                        android:background="@drawable/ic_visibility_black_24dp"
                        android:padding="4dp" />

                </RelativeLayout>

                    <TextView
                        android:id="@+id/centernameId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="50sp"
                        android:justificationMode="inter_word"
                        android:text="(AWC CODE : 12345678912)"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="#26649A"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2">
                    <TextView
                        android:id="@+id/latId"
                        android:layout_weight="1"
                        android:layout_marginLeft="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Latitudes : 88:21545"
                        android:textColor="#26649A"
                        android:padding="1dp" />
                    <TextView
                        android:id="@+id/langId"
                        android:layout_weight="1"
                        android:layout_marginLeft="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Longitudes :88:21545"
                        android:textColor="#26649A"
                        android:padding="1dp" />
                        <TextView
                            android:id="@+id/buildingId"
                            android:layout_weight="1"
                            android:layout_marginLeft="5sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="NAAAAAAA"
                            android:textColor="#26649A"
                            android:padding="1dp" />
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>