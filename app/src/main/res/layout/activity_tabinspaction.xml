    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_below="@+id/lv"
        android:background="#faf8f8"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lvspotId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/sportcdID"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="@drawable/placeholder"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="88dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/sportcdID"
                    android:text="Spot Inspection"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000000" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lvplanId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/pickupID"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:background="@drawable/calendar"
                        android:padding="4dp" />

                    <TextView
                        android:id="@+id/textViewTitlee"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/pickupID"
                        android:text="Pickup From Planning"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="#000000" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tvId"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="MAINTAINED BY"
            android:textColor="#26649A"
            android:textSize="10sp"
            android:textStyle="italic"
            />
        <TextView
            android:layout_below="@+id/tvId"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#26649A"
            android:textStyle="italic"
            android:text="DILIGENT ITECH PRIVATE LIMITED"/>
    </RelativeLayout>
